# =================================
# Database Configuration
# =================================

# Recommended for most uses
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# For uses requiring a connection without pgbouncer
DATABASE_URL_UNPOOLED=postgresql://user:password@host/database?sslmode=require

# Parameters for constructing your own connection string
PGHOST=your-database-host.neon.tech
PGHOST_UNPOOLED=your-database-host.neon.tech
PGUSER=your_user
PGDATABASE=your_database
PGPASSWORD=your_password

# Parameters for Vercel Postgres Templates
POSTGRES_URL=postgresql://user:password@host/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@host/database?sslmode=require
POSTGRES_USER=your_user
POSTGRES_HOST=your-database-host.neon.tech
POSTGRES_PASSWORD=your_password
POSTGRES_DATABASE=your_database
POSTGRES_URL_NO_SSL=postgresql://user:password@host/database
POSTGRES_PRISMA_URL=postgresql://user:password@host/database?connect_timeout=15&sslmode=require

# =================================
# Authentication
# =================================

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# GitHub OAuth (for authentication)
GITHUB_ID=your-github-oauth-client-id
GITHUB_SECRET=your-github-oauth-client-secret

# =================================
# Claude API
# =================================

ANTHROPIC_API_KEY=your-anthropic-api-key

# =================================
# VM Provider Credentials
# =================================

# Orgo API (https://orgo.ai)
ORGO_API_KEY=your-orgo-api-key

# AWS Credentials (for EC2)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Azure Credentials (for Azure VM)
# Create a service principal: az ad sp create-for-rbac --name "ClawdBody" --role contributor
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_REGION=eastus

# E2B API Key (https://e2b.dev)
E2B_API_KEY=your-e2b-api-key

# =================================
# Integrations
# =================================

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Gmail API (for email integration)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
